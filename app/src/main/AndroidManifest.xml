<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.cxwl.shawn.thunder">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <!--//添加允许安装未知应用市场权限，这个权限不是动态权限，所以不用进行动态申请，否则自动更新功能失效-->
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />

    <application
        android:name="com.cxwl.shawn.thunder.common.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/shawn_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        android:networkSecurityConfig="@xml/network_security_config">

        <!--解决android28以后无法使用apache http协议-->
        <uses-library android:name="org.apache.http.legacy" android:required="false"/>

        <!-- 自动更新下载完成广播 -->
        <receiver android:name="com.cxwl.shawn.thunder.util.AutoUpdateBroadcastReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.DOWNLOAD_COMPLETE" />
                <action android:name="android.intent.action.PACKAGE_INSTALL" />
            </intent-filter>
        </receiver>
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:grantUriPermissions="true"
            android:exported="false">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!--高德地图-->
        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="210e1137e0f8e2b6e34d161f22d01598"/>
        <!-- 定位需要的服务 -->
        <service android:name="com.amap.api.location.APSService" />

        <activity android:name=".ShawnWelcomeActivity"
                  android:screenOrientation="portrait"
                  android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ShawnMainActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".ShawnThunderUploadActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".ShawnEventTypeActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".ShawnPictureLibraryActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".ShawnThunderFarActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".ShawnPDFActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".ShawnSurfaceViewActivity"
                  android:configChanges="orientation|keyboard|keyboardHidden|screenSize"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustResize"/>

        <activity android:name=".ShawnLoginActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".ShawnNewsActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".ShawnFeedbackActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".ShawnAboutActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".ShawnSettingActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".ShawnPersonInfoActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".ShawnCheckActivity"
                  android:screenOrientation="portrait"/>

        <activity
            android:name=".ShawnModifyInfoActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ShawnIntroActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ShawnProtocalActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>