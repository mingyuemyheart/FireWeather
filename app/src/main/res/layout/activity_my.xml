<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/reTitle"
        layout="@layout/layout_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clPortrait"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:paddingStart="10dp"
        android:paddingTop="20dp"
        android:paddingEnd="10dp"
        android:paddingBottom="20dp">

        <com.cxwl.shawn.thunder.view.CircleImageView
            android:id="@+id/ivPortrait"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_portrait"
            app:civ_border_color="#d9e0ef"
            app:civ_border_width="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="未登录"
            android:textColor="@color/text_color3"
            android:textSize="@dimen/level_3"
            app:layout_constraintBottom_toBottomOf="@+id/ivPortrait"
            app:layout_constraintStart_toEndOf="@+id/ivPortrait"
            app:layout_constraintTop_toTopOf="@+id/ivPortrait" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_arrow_right"
            app:layout_constraintBottom_toBottomOf="@+id/ivPortrait"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivPortrait" />

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/llPublish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/icon_my_wifi" />

        <TextView
            android:id="@+id/tvPublish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="设备连接"
            android:textColor="@color/text_color3"
            android:textSize="@dimen/level_4" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="15dp"
            android:background="@drawable/icon_arrow_right" />
    </LinearLayout>

    <TextView
        android:id="@+id/divider1"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/light_gray" />

    <LinearLayout
        android:id="@+id/llCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/icon_my_check" />

        <TextView
            android:id="@+id/tvCheck"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="灾情报告审核"
            android:textColor="@color/text_color3"
            android:textSize="@dimen/level_4" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="15dp"
            android:background="@drawable/icon_arrow_right" />
    </LinearLayout>

    <TextView
        android:id="@+id/divider2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/light_gray" />

    <LinearLayout
        android:id="@+id/llNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/icon_my_news" />

        <TextView
            android:id="@+id/tvNews"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="系统消息"
            android:textColor="@color/text_color3"
            android:textSize="@dimen/level_4" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="15dp"
            android:background="@drawable/icon_arrow_right" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/light_gray" />

    <LinearLayout
        android:id="@+id/llFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/icon_my_feedback" />

        <TextView
            android:id="@+id/tvFeedback"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="意见反馈"
            android:textColor="@color/text_color3"
            android:textSize="@dimen/level_4" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="15dp"
            android:background="@drawable/icon_arrow_right" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/light_gray" />

    <LinearLayout
        android:id="@+id/llAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/icon_my_about" />

        <TextView
            android:id="@+id/tvAbout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="关于我们"
            android:textColor="@color/text_color3"
            android:textSize="@dimen/level_4" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="15dp"
            android:background="@drawable/icon_arrow_right" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/light_gray" />

    <LinearLayout
        android:id="@+id/llSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/icon_my_setting" />

        <TextView
            android:id="@+id/tvSetting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="系统设置"
            android:textColor="@color/text_color3"
            android:textSize="@dimen/level_4" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="15dp"
            android:background="@drawable/icon_arrow_right" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/light_gray" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/llProtocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/icon_my_about" />

        <TextView
            android:id="@+id/tvProtocal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="用户协议"
            android:textColor="@color/text_color3"
            android:textSize="@dimen/level_4" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="15dp"
            android:background="@drawable/icon_arrow_right" />
    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/light_gray" />

</LinearLayout>