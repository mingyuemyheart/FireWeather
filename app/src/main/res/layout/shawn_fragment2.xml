<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <com.amap.api.maps.TextureMapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/reTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shawn_bg_corner_white"
        android:layout_margin="5dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/ivLoc"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/shawn_icon_location_black"/>

        <TextView
            android:id="@+id/tvPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ivLoc"
            android:textSize="@dimen/level_4"
            android:textColor="@color/text_color3"/>

        <TextView
            android:id="@+id/tvStreet"
            android:layout_below="@+id/tvPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ivLoc"
            android:textSize="@dimen/level_4"
            android:textColor="@color/text_color2"/>

        <LinearLayout
            android:id="@+id/llContainer"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/tvStreet"
            android:background="#ffE5E5E5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llContainer1"
            android:layout_below="@+id/llContainer"
            android:background="#ffE5E5E5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
        </LinearLayout>

        <TextView
            android:id="@+id/tvThunder"
            android:layout_below="@+id/llContainer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_toEndOf="@+id/ivLoc"
            android:textSize="@dimen/level_4"
            android:textColor="@color/text_color3"/>

        <LinearLayout
            android:id="@+id/llContainer2"
            android:layout_below="@+id/tvThunder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/ivLocation"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/shawn_icon_location"/>

    <com.wang.avi.AVLoadingIndicatorView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/loadingView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible"
        app:indicator="LineScalePulseOutRapid"
        app:indicator_color="@color/colorPrimary"/>

</RelativeLayout>