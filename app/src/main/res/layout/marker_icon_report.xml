<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivMarker"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_corner_report_video"
        android:padding="1.5dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivVideo"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/icon_video_play"
        app:layout_constraintBottom_toBottomOf="@+id/ivMarker"
        app:layout_constraintEnd_toEndOf="@+id/ivMarker"
        app:layout_constraintStart_toStartOf="@+id/ivMarker"
        app:layout_constraintTop_toTopOf="@+id/ivMarker" />

</android.support.constraint.ConstraintLayout>