<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="80dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right">

            <TextView
                android:id="@+id/tvNotCheck"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/yellow"
                android:gravity="center"
                android:padding="5dp"
                android:text="未审核"
                android:textColor="@color/white"
                android:textSize="@dimen/level_5"/>

            <TextView
                android:id="@+id/tvPassCheck"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/green"
                android:gravity="center"
                android:padding="5dp"
                android:text="审核通过"
                android:textColor="@color/white"
                android:textSize="@dimen/level_5"/>

            <TextView
                android:id="@+id/tvRefuseCheck"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/red"
                android:gravity="center"
                android:padding="5dp"
                android:text="审核拒绝"
                android:textColor="@color/white"
                android:textSize="@dimen/level_5"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/front"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:src="@drawable/shawn_icon_seat_bitmap"
                android:scaleType="fitXY"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tvContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:textColor="@color/text_color3"
                    android:textSize="@dimen/level_4"/>

                <TextView
                    android:id="@+id/tvPosition"
                    android:layout_above="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传地点："
                    android:textColor="@color/text_color3"
                    android:textSize="@dimen/level_5"/>

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_above="@+id/tvEventType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传时间："
                    android:textColor="@color/text_color3"
                    android:textSize="@dimen/level_5"/>

                <TextView
                    android:id="@+id/tvEventType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="事件类型：人员"
                    android:textColor="@color/text_color3"
                    android:textSize="@dimen/level_5"/>

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:text="未审核"
                    android:textColor="@color/text_color2"
                    android:textSize="@dimen/level_5"/>

            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>