<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <com.amap.api.maps.TextureMapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/reTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:id="@+id/reLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/shawn_bg_corner_white">

            <ImageView
                android:id="@+id/ivLoc"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/shawn_icon_location_black"/>

            <TextView
                android:id="@+id/tvPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/ivLoc"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/level_4"/>

            <TextView
                android:id="@+id/tvStreet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPosition"
                android:layout_toEndOf="@+id/ivLoc"
                android:textColor="@color/text_color2"
                android:textSize="@dimen/level_5"/>

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="@color/text_color2"
                android:textSize="@dimen/level_5"/>

            <TextView
                android:id="@+id/tvTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvStreet"
                android:layout_toEndOf="@+id/ivLoc"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/level_5"/>

            <TextView
                android:id="@+id/tvHumidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvStreet"
                android:layout_toEndOf="@+id/tvTemp"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/level_5"/>

            <TextView
                android:id="@+id/tvWind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvStreet"
                android:layout_toEndOf="@+id/tvHumidity"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/level_5"/>

            <TextView
                android:id="@+id/tvVisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvStreet"
                android:layout_toEndOf="@+id/tvWind"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/level_5"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/reChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reLocation">

            <RelativeLayout
                android:id="@+id/re"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shawn_bg_corner_white"
                android:padding="5dp">

                <LinearLayout
                    android:id="@+id/llThunder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvThunder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:textColor="@color/text_color3"
                        android:textSize="@dimen/level_5"/>

                    <ImageView
                        android:id="@+id/ivThunderFar"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/shawn_icon_thunder_far"/>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/reSeekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llThunder"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/ivPlay"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:src="@drawable/shawn_icon_play"/>

                    <TextView
                        android:id="@+id/tvSeekbarTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color3"
                        android:textSize="@dimen/level_6"/>

                    <SeekBar
                        android:id="@+id/seekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvSeekbarTime"
                        android:layout_marginEnd="10dp"
                        android:layout_toEndOf="@+id/ivPlay"
                        android:maxHeight="15dp"
                        android:minHeight="15dp"
                        android:paddingEnd="0dp"
                        android:paddingStart="0dp"
                        android:progressDrawable="@drawable/shawn_seekbar_drawable"
                        android:thumb="@drawable/shawn_seekbar_thumb"
                        android:thumbOffset="0dp"/>

                    <LinearLayout
                        android:id="@+id/llTimeContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/seekBar"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"/>

                </RelativeLayout>


            </RelativeLayout>

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tvRain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/re"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/level_4"/>

            <LinearLayout
                android:id="@+id/llContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvRain"
                android:orientation="horizontal"
                android:visibility="visible"/>

        </RelativeLayout>


        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/reChart"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:src="@drawable/shawn_icon_animation_up"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/ivCamera"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/reTop"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/shawn_icon_camera"/>

    <ImageView
        android:id="@+id/ivPicture"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/ivCamera"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/shawn_icon_tk"/>

    <ImageView
        android:id="@+id/ivLocation"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/shawn_icon_location"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/shawn_bg_corner_black"
        android:gravity="center_vertical|center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/shawn_icon_thunder_luji"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="风四雷电"
            android:textColor="@color/white"
            android:textSize="@dimen/level_5"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/shawn_icon_thunder_diji"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地基雷电"
            android:textColor="@color/white"
            android:textSize="@dimen/level_5"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llRight"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/reTop"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/shawn_bg_corner_white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llRadar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="3dp"
            android:paddingTop="3dp">

            <ImageView
                android:id="@+id/ivRadar"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/shawn_icon_radar"/>

            <TextView
                android:id="@+id/tvRadar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="雷达"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/level_5"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCloud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="3dp"
            android:paddingTop="3dp">

            <ImageView
                android:id="@+id/ivCloud"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/shawn_icon_cloud"/>

            <TextView
                android:id="@+id/tvCloud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="云图"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/level_5"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="3dp"
            android:paddingTop="3dp">

            <ImageView
                android:id="@+id/ivMore"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/shawn_icon_more"/>

            <TextView
                android:id="@+id/tvMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/level_5"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/reMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/llRight"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/llRight"
        android:background="@drawable/shawn_bg_corner_white"
        android:clickable="true"
        android:padding="5dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ivMoreRadar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/shawn_icon_more_radar"/>

        <ImageView
            android:id="@+id/ivMoreCloud"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/ivMoreRadar"
            android:src="@drawable/shawn_icon_more_cloud"/>

        <ImageView
            android:id="@+id/ivMoreRain"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/ivMoreCloud"
            android:src="@drawable/shawn_icon_more_rain"/>

        <ImageView
            android:id="@+id/ivMoreLb"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@+id/ivMoreRadar"
            android:layout_marginTop="5dp"
            android:src="@drawable/shawn_icon_more_lb"/>

        <ImageView
            android:id="@+id/ivMoreDqdc"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@+id/ivMoreCloud"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/ivMoreLb"
            android:src="@drawable/shawn_icon_more_dqdc"/>

        <ImageView
            android:id="@+id/ivMoreYdgd"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@+id/ivMoreRain"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/ivMoreDqdc"
            android:src="@drawable/shawn_icon_more_ydgd"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivSetting"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/ivSetting"
        android:background="@drawable/shawn_bg_corner_white"
        android:clickable="true"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主题"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/level_4"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivMapType1"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:background="@drawable/shawn_bg_corner_map_press"
                    android:padding="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/shawn_map_type_sitelite"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="卫星地图"
                    android:textColor="@color/text_color3"
                    android:textSize="@dimen/level_5"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivMapType2"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:padding="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/shawn_map_type_normal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="标准地图"
                    android:textColor="@color/text_color3"
                    android:textSize="@dimen/level_5"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="10dp"
            android:text="显示内容"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/level_4"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivPetrol"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="2dp"
                android:src="@drawable/shawn_icon_petrol"/>

            <ImageView
                android:id="@+id/ivScenic"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:padding="2dp"
                android:src="@drawable/shawn_icon_scenic"/>

            <ImageView
                android:id="@+id/ivPark"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:padding="2dp"
                android:src="@drawable/shawn_icon_park"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="10dp"
            android:text="闪电发生概率"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/level_4"/>

        <com.suke.widget.SwitchButton
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/sbMinute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:sb_checked="false"
            app:sb_checked_color="@color/colorPrimary"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/ivSetting"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/llRight"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/shawn_icon_setting"/>

    <com.wang.avi.AVLoadingIndicatorView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/loadingView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible"
        app:indicator="LineScalePulseOutRapid"
        app:indicator_color="@color/colorPrimary"/>

</RelativeLayout>